push() {
  export PATH="$1:$PATH"
}

profile() {
  source "$HOME/.profiles/$1.sh"
}

sprofile() {
  local pth="$HOME/.profiles/secure/$1.sh"
  [[ -f "$pth" ]] && source "$pth"
}

